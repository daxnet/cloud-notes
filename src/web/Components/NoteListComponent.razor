@using CloudNotes.Web.Models

@if (Notes != null)
{
    <ul class="list-group">
        @foreach (var note in Notes)
        {
            <a href="#" class="list-group-item list-group-item-action" aria-current="true">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@note.Title</h5>
                    @* <small>@note.DateCreatedUtc.ToLocalTime()</small> *@
                </div>
                <p class="mb-1">@note.DateCreatedUtc.ToLocalTime()</p>
                @if (note.DateModifiedUtc.HasValue)
                {
                    <small>@note.DateModifiedUtc.Value.ToLocalTime()</small>
                }
            </a>
        }
    </ul>
}

@code {
    [Parameter]
    public NoteData[]? Notes { get; set; }
}
